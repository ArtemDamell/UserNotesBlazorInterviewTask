<!-- Modal -->
<div class="modal fade show" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: block">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <h1 class="modal-title fs-5 text-white" id="exampleModalLabel">Are you shure you want to delete note?</h1>
                    <button type="button" class="btn-close text-white" @onclick="OnCancelDeleting" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row align-items-center mb-3">
                        <div class="col-sm-12 col-md-2">
                            <label>Title</label>
                        </div>
                        <div class="col-sm-12 col-md-10 text-muted">
                            <small>@NoteForDeleting.Title</small>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-sm-12 col-md-2">
                            <label>Note text</label>
                        </div>
                        <div class="col-sm-12 col-md-10 text-muted">
                            <small>@NoteForDeleting.Body</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="OnCancelDeleting" data-bs-dismiss="modal"><span class="oi oi-x"></span></button>
                    <button type="button" class="btn btn-danger" @onclick="()=> OnNoteDelete.InvokeAsync(NoteForDeleting)" ><span class="oi oi-trash"></span></button>
                </div>
            </div>
        </div>
</div>

@code {
    [Parameter] public EventCallback<Note> OnNoteDelete { get; set; }
    [Parameter] public EventCallback OnCancelDeleting { get; set; }
    [Parameter] public Note NoteForDeleting { get; set; }
}
